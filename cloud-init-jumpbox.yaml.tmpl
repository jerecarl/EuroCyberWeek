packages:
  - git
  - docker.io
  - kubectl
  - git-lfs

groups:
  - docker

system_info:
  default_user:
    groups: [docker]

write_files:
  - path: kubeconfig
    permissions: '0600'
    encoding: base64
    content: ${KUBECONFIG_RAW}

runcmd:
  - systemctl enable docker
  - systemctl start docker
  - echo "Restarting AGIC pods"
  - kubectl --kubeconfig kubeconfig delete pod -n kube-system -l app=ingress-appgw || true
  - echo "Cloning EuroCyberWeek repository"
  - git lfs install --system
  - GIT_LFS_SKIP_SMUDGE=1 git clone https://github.com/jerecarl/EuroCyberWeek.git
  - cd EuroCyberWeek
  - git lfs pull
  - echo "Substituting image placeholder in manifest"
  - sed -i "s|{IMAGE}|${ACR_LOGIN_SERVER}/webgoat:latest|g" webgoat-app.yaml || echo "No placeholder found, continuing"
  - echo "Loading WebGoat Docker image from archive"
  - docker load -i webgoat-docker-image.tar || echo "docker load failed"
  - echo "Logging into ACR ${ACR_LOGIN_SERVER}"
  - echo ${ACR_PASSWORD} | docker login ${ACR_LOGIN_SERVER} -u ${ACR_USERNAME} --password-stdin
  - echo "Tagging and pushing image to ${ACR_LOGIN_SERVER}/webgoat:latest"
  - docker tag webgoat/webgoat:latest ${ACR_LOGIN_SERVER}/webgoat:latest
  - docker push ${ACR_LOGIN_SERVER}/webgoat:latest
  - cd /
  - echo "Applying WebGoat manifest"
  - kubectl --kubeconfig kubeconfig apply -f /EuroCyberWeek/webgoat-app.yaml
  - echo "Deployment complete"
